<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ComparisonActivity">

    <TextView
        android:id="@+id/title1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dummy"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/artist1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dummy"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title1"/>

    <TextView
        android:id="@+id/bpm1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dummy"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/artist1"/>

    <TextView
        android:id="@+id/vs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VS"
        android:textStyle="bold|italic"
        app:flow_horizontalAlign="center"
        android:textSize="20dp"
        android:gravity="center"
        android:padding="10dp"
        android:layout_margin="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bpm1"/>

    <TextView
        android:id="@+id/title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dummy"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vs"/>

    <TextView
        android:id="@+id/artist2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dummy"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title2"/>

    <TextView
        android:id="@+id/bpm2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dummy"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/artist2"/>

    <Button
        android:id="@+id/compare_again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Compare other songs"
        android:padding="10dp"
        android:layout_margin="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>